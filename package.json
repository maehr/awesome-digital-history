{
	"name": "Awesome Digital History",
	"version": "0.0.1",
	"url": "https://maehr.github.io/awesome-digital-history/issues",
	"license": "CC0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --check . '!{CODE_OF_CONDUCT.md,LICENSE.md}' && eslint .",
		"format": "prettier --write .",
		"prepare": "pnpm run prebuild && pnpm run format",
		"prebuild": "node utils/sortJSON.js && node utils/compileReadme.js",
		"awesome-lint": "awesome-lint"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=10"
	},
	"private": true,
	"packageManager": "pnpm@10.16.0",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.58.0",
		"@sveltejs/adapter-cloudflare": "^7.2.6",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/typography": "^0.5.19",
		"autoprefixer": "^10.4.23",
		"awesome-lint": "^2.2.2",
		"daisyui": "^5.5.14",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.2.0",
		"mdsvex": "^0.12.6",
		"mdsvex-relative-images": "^2.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"rehype-autolink-headings": "^7.1.0",
		"svelte": "^5.49.0",
		"svelte-check": "^4.3.5",
		"svelte-multiselect": "^11.6.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	},
	"type": "module"
}
