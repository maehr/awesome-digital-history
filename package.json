{
	"name": "Awesome Digital History",
	"version": "0.0.1",
	"url": "https://maehr.github.io/awesome-digital-history/issues",
	"license": "CC0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . '!{CODE_OF_CONDUCT.md,LICENSE.md}' && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "npm run prebuild && npm run format",
		"prebuild": "node utils/sortJSON.js && node --experimental-json-modules utils/compileReadme.js",
		"awesome-lint": "awesome-lint"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"private": true,
	"packageManager": "pnpm@8.7.5",
	"devDependencies": {
		"@playwright/test": "^1.38.0",
		"@sveltejs/adapter-cloudflare": "^2.3.3",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.25.0",
		"@tailwindcss/typography": "^0.5.10",
		"autoprefixer": "^10.4.15",
		"awesome-lint": "^0.18.3",
		"daisyui": "^2.52.0",
		"eslint": "^8.49.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.10.6",
		"mdsvex-relative-images": "^1.0.3",
		"postcss": "^8.4.30",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.1",
		"prettier-plugin-tailwindcss": "^0.2.8",
		"rehype-autolink-headings": "^6.1.1",
		"svelte": "^3.59.2",
		"svelte-check": "^3.5.1",
		"svelte-multiselect": "^8.6.2",
		"tailwindcss": "^3.3.3",
		"typescript": "^4.9.5",
		"vite": "^4.4.9",
		"vitest": "^0.25.8"
	},
	"type": "module"
}
