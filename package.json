{
	"name": "Awesome Digital History",
	"version": "0.0.1",
	"url": "https://maehr.github.io/awesome-digital-history/issues",
	"license": "CC0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --check . '!{CODE_OF_CONDUCT.md,LICENSE.md}' && eslint .",
		"format": "prettier --write .",
		"prepare": "npm run prebuild && npm run format",
		"prebuild": "node utils/sortJSON.js && node --experimental-json-modules utils/compileReadme.js",
		"awesome-lint": "awesome-lint"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"private": true,
	"packageManager": "pnpm@8.7.5",
	"devDependencies": {
		"@playwright/test": "^1.40.1",
		"@sveltejs/adapter-cloudflare": "^2.3.4",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.30.1",
		"@tailwindcss/typography": "^0.5.10",
		"autoprefixer": "^10.4.16",
		"awesome-lint": "^1.0.1",
		"daisyui": "^4.4.19",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.11.0",
		"mdsvex-relative-images": "^1.0.3",
		"postcss": "^8.4.32",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"rehype-autolink-headings": "^7.1.0",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"svelte-multiselect": "^10.2.0",
		"tailwindcss": "^3.3.6",
		"typescript": "^5.3.3",
		"vite": "^5.0.8",
		"vitest": "^1.0.4"
	},
	"type": "module"
}
