{
	"name": "Awesome Digital History",
	"version": "0.0.1",
	"url": "https://maehr.github.io/awesome-digital-history/issues",
	"license": "CC0",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --check . '!{CODE_OF_CONDUCT.md,LICENSE.md}' && eslint .",
		"format": "prettier --write .",
		"prepare": "npm run prebuild && npm run format",
		"prebuild": "node utils/sortJSON.js && node utils/compileReadme.js",
		"awesome-lint": "awesome-lint"
	},
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"private": true,
	"packageManager": "pnpm@8.7.5",
	"devDependencies": {
		"@playwright/test": "^1.52.0",
		"@sveltejs/adapter-cloudflare": "^4.9.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.21.2",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@tailwindcss/typography": "^0.5.16",
		"autoprefixer": "^10.4.21",
		"awesome-lint": "^1.2.0",
		"daisyui": "^4.12.24",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"mdsvex": "^0.11.2",
		"mdsvex-relative-images": "^1.0.3",
		"postcss": "^8.5.4",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"rehype-autolink-headings": "^7.1.0",
		"svelte": "^4.2.20",
		"svelte-check": "^3.8.6",
		"svelte-multiselect": "^10.3.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.8.3",
		"vite": "^5.4.19",
		"vitest": "^1.6.1"
	},
	"type": "module"
}
